<%if action_name == 'edit'%>
	<h1>Arrangement wijzigen</h1>
<% elsif action_name == 'new' %>
	<h1>Nieuw arrangement toevoegen</h1>
<% end %>
<div class="row">
	<div class="col-md-10">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title"> Arrangement</h3>
			</div>
		  	<div class="panel-body">

				<%= form_for arrangement do |f| %>
				  <div class="form-group">
					<% f.label :title, 'Titel' %>
					<%= f.text_field :title, class: 'form-control'%>
				  </div>

				  <div class="form-group">
					<% f.label :body, 'body' %>
					<%= f.text_area :body, class: 'form-control', rows: 8 %>
					<%= f.hidden_field :kind, value: "2" %>
				  </div>
				  <div class="form-group">
					<%if action_name == 'edit'%>
						<%= f.submit 'Opslaan', class: 'btn btn-warning' %>
					<% elsif action_name == 'new' %>
						<%= f.submit 'Opslaan', class: 'btn btn-success' %>
					<% else %>
						<%= f.submit 'Opslaan', class: 'btn' %>
					<% end %>
					<%= link_to 'Terug', arrangements_path, class: 'btn btn-default no_print' %>
				  </div>
				<% end %>
				
		</div>
	</div>
</div>