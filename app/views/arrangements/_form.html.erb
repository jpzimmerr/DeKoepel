<div class="row">
	<div class="col-md-10">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Arrangement</h3>
			</div>
		  	<div class="panel-body">
	<%= form_for arrangement do |f| %>
		<% f.label :title, 'Titel' %>
		<%= f.text_field :title, class: 'form-control'%>

		<% f.label :body, 'body' %>
		<%= f.text_area :body, class: 'form-control', rows: 8 %>
		<%= f.hidden_field :kind, value: "2" %>

		<%= f.submit 'Opslaan', class: 'btn' %>
	<% end %>

			</div>
				
		</div>
	</div>
</div>