<div class="col-md-6">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Overzicht klant</h3>
		</div>
	  	<div class="panel-body">
		<table class="sortable table table-bordered table-striped table-hover">
			<tr>
				<td> Naam</td>
				<td><%= @customer.first_name  %> <%= @customer.last_name  %> </td>
			</tr>
			<tr>
				<td> Adress</td>
				<td> <%= @customer.address %> </td>
			</tr>
			<tr>
				<td> Postcode</td>
				<td> <%= @customer.zip %> </td>
			</tr>
			<tr>
				<td> Plaats</td>
				<td> <%= @customer.city %> </td>
			</tr>
			<tr>
				<td> Telefoon</td>
				<td> <%= @customer.phone %> </td>
			</tr>
			<tr>
				<td> E-mail</td>
				<td> <%= @customer.email %> </td>
			</tr>
		</table>
	<%= link_to 'Wijzigen', edit_customer_path(@customer), type: "button",  class: 'btn btn-warning' %>
	<%= link_to 'Terug naar overzicht', customers_path, class: 'btn btn-primary no_print' %>
		</div>
			
	</div>

</div>

