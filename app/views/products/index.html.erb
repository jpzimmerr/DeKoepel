<h1> Producten</h1>
<div class="row">
	<div class="col-md-12">
		<%= link_to 'new product', new_product_path, class: 'btn btn-success' %>
			<%= link_to("Print", "javascript:print()", class: 'btn btn-default') %> 
			<%= form_tag(products_path, :method => "get", id: "search-form", class: 'navbar-form navbar-right') do %>
				<%= text_field_tag :search, params[:search], placeholder: "Vul uw zoekterm in", class: 'form-control' %>
				<%= submit_tag "Zoeken!", :name => nil, class: 'btn btn-primary' %>
			<% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<table class="table table-bordered table-striped table-hover">
			<thead>
				<tr>
					<th>Product</th>
					<th>Prijs</th>
					<th>Per</th>
					<th colspan= "3"></th>

				</tr>
			</thead>
			<% @products.each do |product| %>
				<tr>

					<td><%= product.name %></td>
					<td><%= product.price %></td>
					<td><%= product.per %></td>
					<td class="col-md-0"> <%= link_to 'Wijzigen', edit_product_path(product), class: 'btn btn-warning' %> </td>
					<td class="col-md-0"> <%= link_to 'Verwijderen', product_path(product), method: :delete, data: {confirm: 'Weet u het zeker?'}, class: 'btn btn-danger' %> </td>

				</tr>
			<% end %>
		</table>
	</div>
</div>