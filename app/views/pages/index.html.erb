<h1>Pagina's</h1>
<%= link_to 'Nieuwe Pagina', new_page_path, class: 'btn btn-success' %>
	<div class="panel panel-info">

  	<div class="panel-heading ">
  	Titel 
 
  	</div>
 	 <table class="sortable table table-bordered table-striped table-hover">
			<% @pages.each do |page| %>
				<tr>
					<td class="col-md-12"> <%= page.title %> </td>
					<td class="col-md-0"> <%= link_to 'Bekijk', page_path(page), class: 'btn btn-info' %> </td>
					<td class="col-md-0"> <%= link_to 'Wijzigen', edit_page_path(page), class: 'btn btn-warning' %> </td>
					<td class="col-md-0"> <%= link_to 'Verwijderen', page_path(page), method: :delete, data: {confirm: 'Weet u het zeker?'}, class: 'btn btn-danger' %> </td>
			<% end %>
 	 </table>
	</div>