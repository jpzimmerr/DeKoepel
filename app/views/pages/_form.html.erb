<script type="text/javascript">
	$('#editor').wysiwyg()
</script>

<%= form_for page do |f| %>
	<div class="form-group">
		<% f.label :title, 'Titel' %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	<div class="form-group">
		<% f.label :body, 'Body' %>
		<%= f.text_area :body, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.submit 'Opslaan', class: 'form-control' %>
	</div>
<% end %>
