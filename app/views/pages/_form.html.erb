<h1> Nieuw bericht toevoegen </h1>
<div class="row">
	<div class="col-md-10">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Nieuws bericht</h3>
			</div>
		  	<div class="panel-body">
				<%= form_for page do |f| %>
					<div class="form-group">
						<% f.label :title, 'Titel' %>
						<%= f.text_field :title, class: 'form-control' %>
					</div>
					<div class="form-group">
						<% f.label :body, 'Body' %>
						<%= f.text_area :body, class: 'form-control' %>
						<%= f.hidden_field :kind, value: "0" %>
					</div>
					<div class="form-group">
						<%= f.submit 'Opslaan', class: 'form-control' %>
					</div>
				<% end %>
			</div>
				
		</div>
	</div>
</div>