
<h1> Overzicht reserveringen</h1>


<%= form_tag(reservations_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Zoek op naam" %>
  <%= submit_tag "Zoeken !", :name => nil, class: 'btn btn-primary' %>
<% end %>


<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Reserveringen</div>

	
  <!-- Table -->
  <table class="table table-bordered table-hover">
  	<thead>
			<tr>
				<th>Naam</th>
				<th>Bedrijf</th>
				<th>Datum</th>
				<th>Tijdstip</th>
				<th>Omschrijving</th>
				<th>Status</th>
				<th colspan="2"></th>
			</tr>
	</thead>
		<% @reservations.each do |reservation| %>
			<tr>
				<td><%= reservation.customer.first_name  %> <%= reservation.customer.last_name  %> </td>
				<td><%= reservation.customer.company.name %></td>
				<td><%= reservation.date %></td>
				<td><%= reservation.start %> - <%= reservation.end %></td>
				<td><%= reservation.description %></td>
				<td><%= reservation.status %></td>
				<td><%= link_to 'Weergeef', reservation_path(reservation) %></td>
				<td><%= link_to 'Aanpassen', edit_reservation_path(reservation) %></td>
				<td><%= link_to 'Verwijderen', reservation_path(reservation),
														method: :delete, data: { confirm: 'Weet u het zeker?' } %></td>

			</tr>
		<% end %>
  </table>

</div>