<div class="panel panel-info">

  <!-- Default panel contents -->
  <div class="panel-heading">
  	Reserveringen 
 
  </div>

  <%= form_for @filterrific do |f| %>
  	<div>
  		<%= f.text_field(
  			:search_query,
  			class: 'filterrific-periodically-observed'
  		) %>
  	</div>
  	<div>
  		Customer
  		<%= f.select(
  			:with_customer_id,
  			@filterrific.select_options[:with_customer_id],
  			{ include_blank: '- Any -'}
  		) %>
  	</div>
  	<div>
  		Reserved after
		<%= f.text_field(:with_created_at_gte, class: 'js-datepicker') %>
   	</div>
   	<div>
   		Sorted by
   		<%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
   	</div>
   	<div>
   		<%= link_to(
   			'Reset filters',
   			reset_filterrific_reservations_path,
   		) %>
   	</div>
   	<%= render_filterrific_spinner %>
   <% end %>

   <%= render (
   	partial: 'reservations/list',
   	locals: { reservations: @reservations }
   	) %>

</div>
