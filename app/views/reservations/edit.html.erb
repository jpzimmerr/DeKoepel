<h1>Edit Article</h1>
<%= form_for @reservation do |f| %>
	<% if @reservation.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@reservation.errors.count, "error") %> prohibited 
			this article from being saved:</h2>
		<ul>
		<% @reservation.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
	<% end %>
	<%= f.fields_for :customer do |c| %>
		<%= render "customers/customer_fields", :f => c %>

		<%= c.fields_for :company do |builder| %>
			<%= render "companies/company_fields", :f => builder %>
		<% end %>

	<% end %>

	<p>
		<%= f.label :date, 'Datum' %><br />
		<%= f.text_field :date %>
	</p>

	<p>
		<%= f.label :start, 'Begintijd' %>
		<%= f.label :end, 'Eindtijd' %><br/>
		<%= f.text_field :start %>
		<%= f.text_field :end %>
	</p>

	<p>
		<%= f.label :description, 'Korte beschrijving van uw activiteit' %><br />
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.submit 'Aanpassen' %>
	</p>
<% end %>

<%= link_to 'Back', reservations_path %>
