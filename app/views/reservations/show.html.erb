<%= stylesheet_link_tag "application", :media => 'print' %>
<title>Reservering van <%= @reservation.customer.first_name %> <%= @reservation.customer.last_name %> aangevraagd op <%= @reservation.created_at %></title>

<h1>Reservering</h1>

<p>Reservering aangevraagd op <%= @reservation.created_at %></p>
<div class="row">
  <div class="col-md-5">
    <div class="panel panel-info">
      <div class="panel-heading">
        Klant
      </div>
      <table class="table table-bordered table-striped">
        <tr>
          <td><b> Naam</b></td>
          <td><%= @reservation.customer.first_name %> <%= @reservation.customer.last_name %></td>
        </tr>
        <tr>
          <td><b> Bedrijf</b></td>
          <td><%= @reservation.customer.company.name %></td>
        </tr>
        <tr>
          <td><b> Adres</b></td>
          <td><%= @reservation.customer.address %></td>
        </tr>
        <tr>
          <td><b> Postcode woonplaats</b></td>
          <td><%= @reservation.customer.zip %>  <%= @reservation.customer.city %></td>
        </tr>
        <tr>
          <td><b> Telefoonnummer</b></td>
          <td><%= @reservation.customer.phone %></td>
        </tr>
        <tr>
          <td><b> E-mail</b></td>
          <td><%= @reservation.customer.email %></td>
        </tr>
      </table>
    </div>
  </div>



  <div class="col-md-7">
    <div class="panel panel-info">
      <div class="panel-heading">
        Reservering
      </div>
      <table class="table table-bordered table-striped">
      	<tr>
      		<td><b> Datum</b></td>
          <td><%= @reservation.started_at_date %></td>
        </tr>
        <tr>
      		<td><b> Tijd</b></td>
          <td><%= @reservation.started_at_time %> - <%= @reservation.ended_at_time %></td>
        </tr>
        <tr>
          <td><b> Aantal personen</b></td>
          <td><%= @reservation.amount %></td>
        </tr>
        <tr>
      		<td><b> Omschrijving</b></td>
          <td><%= @reservation.description %></td>
        </tr>
        <tr>
      		<td><b> Notities</b> </td>
          <td><%= @reservation.note %></td>
      	</tr>
      </table>
    </div>
  </div>
</div>
<div class="">
<%= link_to 'Wijzigen', edit_reservation_path(@reservation), type: "button",  class: 'btn btn-warning no_print' %>
<%= link_to 'Verwijderen', reservation_path(@reservation),
                            method: :delete, data: { confirm: 'Weet u het zeker?'}, type: "button", class: 'btn btn-danger no_print' %>
<%= link_to("Print dit overzicht", "javascript:print()", class: 'btn btn-primary no_print') %> 
<%= link_to 'Terug naar overzicht', reservations_path, class: 'btn btn-primary no_print' %>
</div>