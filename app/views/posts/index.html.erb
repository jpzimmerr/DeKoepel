<h1>Nieuws overzicht pagina </h1>
<%= link_to 'Nieuw bericht', new_post_path, class: 'btn btn-primary' %>

<table class="table table-bordered table-striped table-hover">
	<thead>
		<tr>
				<th colspan="4">Titel</th>

				

				
				
		</tr>
		<% @posts.each do |post| %>
			<tr>
				<td class="col-md-12"> <%= post.title %> </td>
				<td class="col-md-0">
					<%= link_to 'Bekijk', post_path(post), class: 'btn btn-warning' %> </td>
				<td class="col-md-0"> 
					<%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %> </td>
				<td class="col-md-0">
					<%= link_to 'Del', post_path(post),
														method: :delete, data: { confirm: 'Weet u het zeker?'}, class: 'btn btn-danger' %> </td>
					
			</tr>
		<% end %>

			
	</thead>

<%= render @posts %>