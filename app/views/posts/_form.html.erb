<h1> Nieuw bericht toevoegen </h1>
<div class="row">
	<div class="col-md-10">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Nieuws bericht</h3>
			</div>
		  	<div class="panel-body">

				<%= form_for post do |f| %>
					<div class="form-group">
						<% f.label :title, 'Titel' %>
						<%= f.text_field :title, class: 'form-control' %>
					</div>
					<div class="form-group">
						<% f.label :body, 'body' %>
						<div id="edit"></div>
						<%= f.text_area :body, class: 'form-control',rows: 8 %>
						<%= f.hidden_field :kind, value: "1" %>
					</div>
					<div class="form-group">
						<%if action_name == 'edit'%>
							<%= f.submit 'Opslaan', class: 'btn btn-warning' %>
						<% elsif %>
							<%= f.submit 'Opslaan', class: 'btn btn-success' %>
						<% else %>
							<%= f.submit 'Opslaan', class: 'btn' %>
						<% end %>
					</div>
				<% end %>

			</div>
				
		</div>
	</div>