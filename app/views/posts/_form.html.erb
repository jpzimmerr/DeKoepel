<%= form_for post do |f| %>
	<div class="form-group">
		<% f.label :title, 'Titel' %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	<div class="form-group">
		<% f.label :body, 'body' %>
		<%= f.text_area :body, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.submit 'Opslaan', class: 'form-control' %>
	</div>
<% end %>